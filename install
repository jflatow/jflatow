#!/bin/bash

cd `dirname $0`

mkdir -p ~/.bin
cp .bin/* ~/.bin

cp .emacs ~
mkdir -p ~/.emacs.d/lisp
cp -rf .emacs.d/lisp ~/.emacs.d

cp .profile ~
ln -sf $HOME/.profile $HOME/.bashrc

mkdir -p ~/.subversion
cp .subversion/config ~/.subversion/

cp .gitconfig ~
cp .gitignore ~
git config --global core.excludesfile ~/.gitignore